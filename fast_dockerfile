# Ultra-fast building Dockerfile for video generation
FROM python:3.10-slim

# Install ffmpeg (essential for video creation)
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install (minimal dependencies)
COPY light_requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy handler
COPY fast_handler.py handler.py

# Set the command
CMD ["python", "handler.py"]
